@model CrosswordGame.Models.Level
@{
    ViewData["Title"] = Model?.Name ?? "Gra";
}

<div class="container mt-4">
    <h1 class="text-center">@Model?.Name</h1>

    <div class="row mt-4">
        <div class="col-md-6">
            <h3>Dostępne litery:</h3>
            <div id="letters-container" class="d-flex flex-wrap gap-2 mb-3">
                <!-- Litery będą wstawiane dynamicznie przez JavaScript -->
            </div>

            <div class="mb-3">
                <label for="word-input" class="form-label">Twoje słowo:</label>
                <div class="input-group">
                    <input type="text" id="word-input" class="form-control" placeholder="Wpisz słowo">
                    <button id="check-word" class="btn btn-primary">Sprawdź</button>
                </div>
            </div>

            <div class="mb-3">
                <button id="clear-word" class="btn btn-secondary">Wyczyść</button>
                <a href="@Url.Action("ResetLevel", "Home")" class="btn btn-warning">Resetuj poziom</a>
                <a href="@Url.Action("Index", "Home")" class="btn btn-info">Powrót do menu</a>
            </div>
        </div>

        <div class="col-md-6">
            <h3>Znalezione słowa:</h3>
            <div id="found-words" class="border p-3">
                <!-- Znalezione słowa będą wstawiane dynamicznie -->
            </div>

            <div class="mt-3">
                <h4>Wybierz inny poziom:</h4>
                <div class="btn-group" role="group">
                    <a href="@Url.Action("SelectLevel", "Home", new { levelId = 1 })" class="btn btn-outline-success">Łatwy</a>
                    <a href="@Url.Action("SelectLevel", "Home", new { levelId = 2 })" class="btn btn-outline-warning">Średni</a>
                    <a href="@Url.Action("SelectLevel", "Home", new { levelId = 3 })" class="btn btn-outline-danger">Trudny</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="message-area" class="mt-3"></div>

@section Scripts {
    <script src="~/js/game.js"></script>
}